---
import { WORKS } from '../lib/Experience'
---

<div class="container mx-auto w-full h-full">
  <div class="relative wrap overflow-hidden p-10 h-full">
    <div
      class="border-0 md:border-2 absolute md:border-opacity-20 md:border-gray-700 h-full left-[50%]"
    >
    </div>
    <!-- right timeline -->
    {
      WORKS.map((work) => (
        <div
          class={`mb-4 md:flex md:justify-between md:items-center w-full hover:scale-105 transition ${
            work.direction === 'right'
              ? ''
              : 'md:flex-row-reverse left-timeline'
          }`}
        >
          <div class="order-1 md:w-5/12" />
          <div class="z-20 mb-2 flex justify-center items-center order-1 bg-gray-800 shadow-xl w-8 h-8 rounded-full">
            <span class="mx-auto text-white font-semibold text-xl">
              {work.id}
            </span>
          </div>
          <div
            class={`order-1 rounded-lg shadow-xl md:w-5/12 px-6 py-4 ${
              work.direction === 'right' ? 'bg-gray-400' : 'bg-red-400'
            }`}
          >
            <h2 class="mx-auto text-white font-semibold text-xl">
              {work.title}
            </h2>
            <h3 class="mb-3 font-bold text-white text-sm inline">
              {work.subtitle}
            </h3>
            <span class="mx-2">|</span>
            <span class="mx-auto font-semibold text-xs text-white">
              {work.date}
            </span>
            <ul class="list-disc">
              <li>
                <p class="mt-2 text-xs font-extralight text-white">
                  {work.text}
                </p>
              </li>
              <li>
                <p class="text-xs font-extralight text-white">{work.text2}</p>
              </li>
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</div>
