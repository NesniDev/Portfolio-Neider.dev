---
// import Layout from "../layouts/Layout.astro";
import Layout from "@/layouts/Layout.astro";
import PersonalInformation from "@/components/PersonalInformation.astro";
import Container from "@/components/Container.astro";
import Information from "@/components/Information.astro";
import Projects from "@/components/Projects.astro";
import Tecnologys from "@/components/Tecnologys.astro";
import Contact from "@/components/Contact.astro";
---

<Layout
  title="Portfolio - Neider | Donde la Creatividad se Encuentra con la Tecnología."
  description="¡Bienvenido a mi portfolio! En Neider, fusiono la creatividad con la tecnología para ofrecerte soluciones innovadoras y visualmente impactantes. Descubre cómo mis habilidades en diseño y desarrollo se combinan para crear experiencias únicas y memorables. Explora mi trabajo y déjate inspirar por la sinergia entre la imaginación y la tecnología en cada proyecto."
>
  <main>
    <Container>
      <PersonalInformation />
    </Container>
    <Container>
      <h4><span class="typed"></span></h4>
      <div class="uppercase my-3 text-xl font-bold" id="cadena-texto">
        <h2 class="dark:text-[#012029] text-white">
          información sobre mi <i class="text-yellow-300 dark:text-orange-500">carrera</i>
        </h2>
      </div>
      <Information />
    </Container>
    <Container id="proyectos">
      <h2 class="my-3 text-xl font-bold text-white dark:text-[#012029]">Proyectos Realizados</h2>
      <Projects />
    </Container>
    <Container id="habilidades">
      <h2 class="my-3 text-xl font-bold text-white dark:text-[#012029]">Tecnologías</h2>
      <Tecnologys />
    </Container>
    <Container id="contacto">
      <h2 class="my-3 text-xl font-bold text-white dark:text-[#012029]">Contacto</h2>
      <Contact />
    </Container>
  </main>
</Layout>

